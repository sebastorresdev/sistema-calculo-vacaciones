@model IEnumerable<Vacaciones.Frontend.Models.TipoEmpleado.TipoEmpleadoViewModel>

@{
    ViewData["Title"] = "Lista de Tipos de Empleados";
}

<div class="container mt-5">
    <!-- Encabezado -->
    <div class="row justify-content-between align-items-center mb-4">
        <div class="col-lg-8">
            <h1 class="display-6 fw-bold text-primary">@ViewData["Title"]</h1>
            <p class="text-muted">Consulta y administra los tipos de empleados disponibles</p>
        </div>
        <div class="col-lg-4 text-end">
            <!-- Botón para crear un nuevo tipo de empleado -->
            <a asp-action="Create" class="btn btn-outline-primary btn-lg">
                <i class="fa-solid fa-plus-circle"></i> Nuevo Tipo de Empleado
            </a>
        </div>
    </div>

    <!-- Tabla de tipos de empleados -->
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0"><i class="fas fa-users"></i> Tipos de Empleados</h4>
        </div>
        <div class="card-body">
            <table id="datatablesSimple" class="table table-striped table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>#</th>
                        <th>Nombre</th>
                        <th>Días por Año</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var tipoEmpleado in Model)
                    {
                        <tr>
                            <td>@tipoEmpleado.Id</td>
                            <td>@tipoEmpleado.Nombre</td>
                            <td>@tipoEmpleado.DiasPorAnio</td>
                            <td>
                                <!-- Botón para editar -->
                                <a asp-action="Edit" asp-route-id="@tipoEmpleado.Id" class="btn btn-warning btn-sm me-2">
                                    <i class="fas fa-edit"></i> Editar
                                </a>

                                <!-- Botón para eliminar con confirmación -->
                                <form asp-action="Delete" asp-route-id="@tipoEmpleado.Id" method="post" style="display:inline;" onsubmit="return confirmDelete(event, this);">
                                    <button type="submit" class="btn btn-danger btn-sm">
                                        <i class="fas fa-trash-alt"></i> Eliminar
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>