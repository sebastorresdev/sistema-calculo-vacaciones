@model Vacaciones.Frontend.Models.TipoEmpleado.EditTipoEmpleadoViewModel
@{
    ViewData["Title"] = "Editar Tipo de Empleado";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 text-center">
            <h1 class="display-4 text-primary">@ViewData["Title"]</h1>
            <p class="lead text-muted">Edita la información del tipo de empleado.</p>
        </div>
    </div>

    <!-- Mensajes de error -->
    @if (ViewData.ModelState.ErrorCount > 0)
    {
        <div class="alert alert-danger mt-4">
            <h5 class="alert-heading">Errores encontrados:</h5>
            <ul class="mb-0">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <li>@error.ErrorMessage</li>
                }
            </ul>
        </div>
    }

    <!-- Botón de retorno -->
    <div class="mt-4 mb-5">
        <a href="@Url.Action("Index", "TipoEmpleado")" class="btn btn-outline-secondary">
            <i class="fa-solid fa-arrow-left"></i> Retornar atrás
        </a>
    </div>

    <!-- Formulario -->
    <div class="row justify-content-center mt-4">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-header bg-primary text-white text-center py-3">
                    <h4 class="mb-0">Formulario de Edición</h4>
                </div>
                <div class="card-body p-4">
                    <form method="post" asp-action="Edit" asp-route-id="@Model.Id">
                        <!-- Campo: Nombre -->
                        <div class="mb-4">
                            <label asp-for="Nombre" class="form-label fw-semibold">Nombre del Tipo de Empleado</label>
                            <input class="form-control @((ViewData.ModelState["Nombre"]?.Errors.Count > 0) ? "is-invalid" : "")"
                                   type="text"
                                   placeholder="Ejemplo: Administrativo"
                                   asp-for="Nombre" />
                            <span asp-validation-for="Nombre" class="invalid-feedback"></span>
                        </div>

                        <!-- Campo: Días por Año -->
                        <div class="mb-4">
                            <label asp-for="DiasPorAnio" class="form-label fw-semibold">Días por Año</label>
                            <input class="form-control @((ViewData.ModelState["DiasPorAnio"]?.Errors.Count > 0) ? "is-invalid" : "")"
                                   type="number"
                                   min="10" max="30"
                                   asp-for="DiasPorAnio" />
                            <span asp-validation-for="DiasPorAnio" class="invalid-feedback"></span>
                        </div>

                        <!-- Botón de actualización -->
                        <div class="d-grid mt-4">
                            <button type="submit" class="btn btn-success btn-lg fw-semibold">
                                <i class="fa-regular fa-circle-check"></i> Actualizar Tipo de Empleado
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
